<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F7F6"
    android:orientation="vertical"
    tools:context=".backup">

    <LinearLayout
        android:id="@+id/selectiontop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@color/green"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"

                android:src="@drawable/back"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist"
                android:text="Backup &amp; Restore"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="20dp" />


        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">


        <LinearLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist"
                android:text="Offline Backup"
                android:textColor="@color/green"
                android:textFontWeight="600"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:src="@drawable/export" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/urbanist"
                        android:text="Export"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/message"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:alpha="0.5"

                        android:fontFamily="@font/urbanist"
                        android:text="File Location"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="14dp" />

                </LinearLayout>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:id="@+id/export01"
                    android:text="create"
                    android:textAllCaps="false"
                    android:layout_gravity="top"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/buttonbac"
                    android:textFontWeight="600"
                    android:textColor="@color/black"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:src="@drawable/imp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/urbanist"
                        android:text="Import"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:alpha="0.5"

                        android:fontFamily="@font/urbanist"
                        android:text="Select the files from the location you have copied it to"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="14dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:id="@+id/import01"
                    android:text="select"
                    android:textAllCaps="false"
                    android:layout_gravity="top"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/buttonbac"
                    android:textFontWeight="600"
                    android:textColor="@color/black"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:listitem="@layout/item"
        android:layout_height="match_parent"
        android:layout_below="@+id/selectiontop"
        />


</LinearLayout>